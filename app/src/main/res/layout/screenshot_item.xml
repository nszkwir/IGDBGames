<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sreenshot_item_margin">

    <ImageView
        android:id="@+id/screenshotImage"
        android:layout_width="@dimen/screenshot_item_width"
        android:layout_height="@dimen/screenshot_item_height"
        android:contentDescription="@string/screenshot_content_description"
        android:elevation="@dimen/screenshot_item_elevation"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/igdb_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>